# Configurações do Servidor para Produção
PORT=10000
NODE_ENV=production

# Configurações do MongoDB Atlas (PRODUÇÃO)
# IMPORTANTE: Configure no Render Dashboard com suas credenciais reais
# Exemplo: mongodb+srv://bikefix-app:SUA_SENHA@bikefix-production.xxxxx.mongodb.net/bikefix?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/bikefix
MONGODB_ATLAS_URI=mongodb+srv://bikefix-app:BikeFixApp2024!@bikefix-cluster.mongodb.net/bikefix?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb://localhost:27017/bikefix

# Configurações JWT (IMPORTANTE: Gerar chave forte no Render)
JWT_SECRET=CONFIGURE_CHAVE_FORTE_NO_RENDER_COM_PELO_MENOS_32_CARACTERES
JWT_EXPIRE=7d

# Configurações Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Configurações Strava OAuth
STRAVA_CLIENT_ID=your_strava_client_id_here
STRAVA_CLIENT_SECRET=your_strava_client_secret_here

# Configurações de Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# URLs do Frontend (PRODUÇÃO)
FRONTEND_URL=https://bikefix-frontend.onrender.com
CLIENT_URL=https://bikefix-frontend.onrender.com
BACKEND_URL=https://bikefix-backend.onrender.com

# Configurações CORS
CORS_ORIGIN=https://bikefix-frontend.onrender.com

# Configurações de Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Segurança
SESSION_SECRET=bikefix_session_secret_production

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=./logs/app.log